    <script>
        String.prototype.lpad = function(padString, length) {
            var str = this;
            while (str.length < length)
                str = padString + str;
            return str;
        }
        var srv_types = {};
        srv_types["TV"] = "TV";
        srv_types["SMART SERVICE"] = "SM";
        srv_types["MOBILE"] = "MO";

        $(function() {

            var intervalId = window.setInterval(function(){

                $.ajax({
                    method: "POST",
                    url: "/queue",
                    //data: JSON.stringify({ agent: cur_agent }),
                    contentType: "application/json"
                }).done(function(data) {
                    console.log(data);
                    console.log(data.length);
                    $("#in_queue").text(""+data.length);

                }).fail(function() {
                    $("#modal-msg").text("Selecciona el agente");
                    $("#my-modal").modal("show");
                })

            }, 1150);


            $("#select-agente a").click(function() {
                $("#agente").text("("+$(this).text()+")");
            });

            $("#llamar").click(function (){

                if($("#agente").text()==""){
                    $("#modal-msg").text("Selecciona el agente");
                    $("#my-modal").modal("show");
                    return;
                }

                var cur_agent = $("#agente").text().slice(1, -1);
                $.ajax({
                    method: "POST",
                    url: "/pick_next",
                    data: JSON.stringify({ agent: cur_agent }),
                    contentType: "application/json"
                }).done(function(data) {
                    console.log(data);
                    if(data.counter == undefined){
                        $("#my-modal").modal("show");
                        $("#modal-msg").text("No hay tickets disponibles");
                    }else{
                        $("#called_counter").text(srv_types[data.service]+""+data.counter.toString().lpad("0", 3));
                        $("#current_number").text("("+srv_types[data.service]+""+data.counter.toString().lpad("0", 3)+")");
                        $("#ping_id").attr("value",data.id);
                    }
                }).fail(function() {
                    $("#modal-msg").text("Hubo un problema");
                    $("#my-modal").modal("show");
                }).always(function (){
                    $.ajax({
                        method: "POST",
                        url: "/queue",
                        //data: JSON.stringify({ agent: cur_agent }),
                        contentType: "application/json"
                    }).done(function(data) {
                        console.log(data);
                        console.log(data.length);
                        $("#in_queue").text(""+data.length);

                    }).fail(function() {
                        $("#modal-msg").text("Hubo un problema");
                        $("#my-modal").modal("show");
                    })
                });
            });

            $("#saltar").click(function (){

                if($("#ping_id").attr("value") === undefined) return;

                $.ajax({
                    method: "POST",
                    url: "/attention",
                    data: JSON.stringify({ ping_id: $("#ping_id").attr("value"), new_status: "S" }),
                    contentType: "application/json"
                }).done(function(data) {
                    console.log(data);
                    $("#called_counter").text("(En espera)");
                    $("#current_number").text("");

                }).fail(function() {
                    $("#my-modal").modal("show");
                    $("#modal-msg").text("Hubo un problema");
                }).always(function (){
                    $.ajax({
                        method: "POST",
                        url: "/queue",
                        //data: JSON.stringify({ agent: cur_agent }),
                        contentType: "application/json"
                    }).done(function(data) {
                        console.log(data);
                        console.log(data.length);
                        $("#in_queue").text(""+data.length);

                    }).fail(function() {
                        $("#modal-msg").text("Hubo un problema");
                        $("#my-modal").modal("show");
                    })
                });
            });

            $("#atender").click(function (){

                if($("#ping_id").attr("value") === undefined) return;

                $.ajax({
                    method: "POST",
                    url: "/attention",
                    data: JSON.stringify({ ping_id: $("#ping_id").attr("value"), new_status: "A" }),
                    contentType: "application/json"
                }).done(function(data) {
                    console.log(data);
                    $("#called_counter").text("(En espera)");
                    $("#current_number").text("");
                }).fail(function() {
                    $("#modal-msg").text("Hubo un problema");
                    $("#my-modal").modal("show");
                }).always(function (){
                    $.ajax({
                        method: "POST",
